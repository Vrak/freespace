

<p id="notice"><%= notice %></p>

<h1 class="column">Members</h1>


<p>this page should be accesable for crew only!</p>

<div class="table-scroll">
  <table>
  <thead>
    <tr>
      <th>First name</th>
      <th>Last name</th>
      <th>Nickname</th>
      <th>Email</th>
      <th>Emergency contact</th>
      <th>Emerg phone</th>
      <th>Med history</th>
      <th>Dependant</th>
      <th>Vehicle licence</th>
      <th>Agrees To waiver</th>
      <th colspan="3"></th>
    </tr>
  </thead>


  <tbody>
    <% @members.each do |member| %>
      <tr>
        <td><%= member.first_name %></td>
        <td><%= member.last_name %></td>
        <td><%= member.nickname %></td>
        <td><%= member.email %></td>
        <td><%= member.emergency_contact %></td>
        <td><%= member.emerg_phone %></td>
        <td><%= member.med_history %></td>
        <td><%= member.dependant %></td>
        <td><%= member.vehicle_licence %></td>
        <td><%= member.agrees_waiver %></td>
        <div class="small button-group">
        <td><%= link_to 'Show', member, class:'clear button tiny' %></td>
        <td><%= link_to 'Edit', edit_member_path(member), class:' clear button tiny warning' %></td>
        <td><%= link_to 'Destroy', member, method: :delete, data: { confirm: 'Are you sure?' }, class:'clear button tiny alert' %></td>
        </div>
      </tr>
    <% end %>
  </tbody>
</table>
</div>

<br>

  <i class="fi-torsos-all-female fa-2x"></i>
  <%= link_to 'New Member', new_member_path, class:'button success' %>
  </i>